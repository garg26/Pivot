<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="@dimen/set_read_top_height"
        android:background="@color/color_primary">

        <simplifii.framework.widgets.CustomFontTextView
            android:id="@+id/tv_set_id"
            style="@style/tv_style"
            android:layout_marginLeft="@dimen/margin_24dp"
            android:layout_marginTop="@dimen/margin_24dp"
            android:text="Set Id 1"
            android:textSize="@dimen/text_14dp" />


        <simplifii.framework.widgets.CustomFontTextView
            android:id="@+id/tv_set_name"
            style="@style/tv_style"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/margin_24dp"
            android:text="qwtyuioasghjklzbnnm" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/list_set_read"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/bg_gray" />

</LinearLayout>