<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@color/full_transparent"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="bottom"
        android:background="@drawable/bg_interner_error"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="No Internet Connection"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <simplifii.framework.widgets.CustomFontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="It seems you are not connected to internet. Please check your internet"
        android:textColor="@color/black"
        app:customFont="@string/font_medium"
        android:layout_marginTop="32dp"
        />
<simplifii.framework.widgets.CustomFontButton
    android:id="@+id/btn_retry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:text="RETRY"
    android:background="@drawable/shap_button"
    android:layout_marginTop="20dp"
    android:textColor="@color/dark_red"
    android:padding="8dp"
    app:customFont="@string/font_bold"

    />
    </LinearLayout>
</LinearLayout>